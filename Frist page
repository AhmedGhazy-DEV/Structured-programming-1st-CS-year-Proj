#include <SFML/Graphics.hpp>
#include <iostream>

int main()
{
    sf::RenderWindow window(sf::VideoMode(800, 600), "Rehabilitation Clinic");
    window.setFramerateLimit(60);

    // Soft blue background
    sf::Color backgroundColor(173, 216, 230); // Light blue

    // Load font
    sf::Font font;
    if (!font.loadFromFile("DejaVuSans.ttf"))
    {
        std::cout << "Error loading font\n";
        return -1;
    }

    // Header text
    sf::Text headerText;
    headerText.setFont(font);
    headerText.setString("Welcome to our Rehabilitation Clinic");
    headerText.setCharacterSize(34);
    headerText.setFillColor(sf::Color(20, 20, 70)); // Dark blue
    headerText.setStyle(sf::Text::Bold);
    headerText.setPosition(800 / 2.f - headerText.getGlobalBounds().width / 2.f, 30.f);

    // Middle text
    sf::Text middleText;
    middleText.setFont(font);
    middleText.setString("You are:");
    middleText.setCharacterSize(26);
    middleText.setFillColor(sf::Color(50, 50, 100));
    middleText.setPosition(800 / 2.f - middleText.getGlobalBounds().width / 2.f, 180.f);

    // Doctor button (rounded rectangle look)
    sf::RectangleShape doctorButton(sf::Vector2f(180.f, 60.f));
    doctorButton.setFillColor(sf::Color(240, 248, 255)); // Alice blue
    doctorButton.setOutlineColor(sf::Color(30, 144, 255)); // Dodger blue
    doctorButton.setOutlineThickness(3.f);
    doctorButton.setPosition(800 / 2.f - 200.f, 280.f);

    sf::Text doctorText;
    doctorText.setFont(font);
    doctorText.setString("Doctor");
    doctorText.setCharacterSize(24);
    doctorText.setFillColor(sf::Color(30, 144, 255));
    doctorText.setPosition(
        doctorButton.getPosition().x + doctorButton.getSize().x / 2.f - doctorText.getGlobalBounds().width / 2.f,
        doctorButton.getPosition().y + doctorButton.getSize().y / 2.f - doctorText.getGlobalBounds().height
    );

    // Patient button (rounded rectangle look)
    sf::RectangleShape patientButton(sf::Vector2f(180.f, 60.f));
    patientButton.setFillColor(sf::Color(240, 248, 255));
    patientButton.setOutlineColor(sf::Color(255, 99, 71)); // Tomato red
    patientButton.setOutlineThickness(3.f);
    patientButton.setPosition(800 / 2.f + 20.f, 280.f);

    sf::Text patientText;
    patientText.setFont(font);
    patientText.setString("Patient");
    patientText.setCharacterSize(24);
    patientText.setFillColor(sf::Color(255, 99, 71));
    patientText.setPosition(
        patientButton.getPosition().x + patientButton.getSize().x / 2.f - patientText.getGlobalBounds().width / 2.f,
        patientButton.getPosition().y + patientButton.getSize().y / 2.f - patientText.getGlobalBounds().height
    );

    // Main loop
    while (window.isOpen())
    {
        sf::Event event;
        while (window.pollEvent(event))
        {
            if (event.type == sf::Event::Closed)
                window.close();

            if (event.type == sf::Event::MouseButtonPressed)
            {
                if (event.mouseButton.button == sf::Mouse::Left)
                {
                    sf::Vector2f mousePos(static_cast<float>(event.mouseButton.x), static_cast<float>(event.mouseButton.y));

                    if (doctorButton.getGlobalBounds().contains(mousePos))
                        std::cout << "Doctor selected!\n";
                    if (patientButton.getGlobalBounds().contains(mousePos))
                        std::cout << "Patient selected!\n";
                }
            }
        }

        window.clear(backgroundColor);

        // Draw everything
        window.draw(headerText);
        window.draw(middleText);
        window.draw(doctorButton);
        window.draw(doctorText);
        window.draw(patientButton);
        window.draw(patientText);

        window.display();
    }

    return 0;
}
